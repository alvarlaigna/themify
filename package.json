{
  "name": "themes-playground",
  "version": "1.0.0-beta",
  "description": "",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "build": "npm test && npm run clean:dist && tsc && npm run copy:dist",
    "copy:dist": "cp -R src/sass/. dist",
    "clean:dist": "rimraf dist",
    "format": "prettier --write --config .prettierrc src/*.ts src/**/*.ts",
    "test": "jest",
    "lint:commit": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*spec\\.(ts|js)$"
  },
  "lint-staged": {
  "src/**/*.ts": [
    "npm run format",
    "git add"
  ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-angular": "^6.1.3",
    "@types/jest": "^22.2.0",
    "@types/node": "^9.4.6",
    "clean-css": "^4.1.11",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "glob": "^7.1.2",
    "hex-to-rgba": "^1.0.1",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "node-sass": "^4.7.2",
    "postcss": "^6.0.19",
    "postcss-node-sass": "^2.1.4",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "tmp": "0.0.33",
    "ts-jest": "^22.4.1",
    "typescript": "^2.7.2"
  }
}
